<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.unla.datos.Cliente" table="cliente">
		<id column="idCliente" name="idCliente">
			<generator class="identity" />
		</id>
		<property column="apellido" name="apellido" type="string" />
		<property column="nombre" name="nombre" type="string" />
		<property column="dni" name="dni" type="int" />
		<!-- Relaciones -->
		<many-to-one name= "contacto" column="idContacto"  class="com.unla.datos.Contacto" unique="true" not-null="true" />
		<many-to-one name= "direccion" column="idDireccion"  class="com.unla.datos.Direccion" unique="true" not-null="true"  />
		<many-to-one name="login" column="idLogin" class="com.unla.datos.Login" unique="true" not-null="true"/>
		
		<set name="recibos" table="recibo" order-by="idRecibo asc" inverse="true" lazy="true" fetch="select">
			<key column="idCliente" not-null="true" />
			<one-to-many class="com.unla.datos.Recibo" />
		</set>
		<set name="facturas" table="factura" order-by="idFactura asc" inverse="true" lazy="true" fetch="select">
			<key column="idCliente" not-null="true" />
			<one-to-many class="com.unla.datos.Factura" />
		</set>

	</class>
</hibernate-mapping>

