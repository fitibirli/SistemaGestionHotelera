<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.unla.datos.Habitacion" table="habitacion">
		<id column="idHabitacion" name="idHabitacion">
			<generator class="identity" />
		</id>
		
		<set table="habitacionestadia" name="estadias" outer-join="true">
		<key column="idHabitacion"/>
		<many-to-many column="idEstadia" class="com.unla.datos.Estadia"/>
		</set>
		
		<property column="capacidadMaxima" name="capacidadMaxima" type="int" />
		<property column="disponible" name="disponible" type="boolean" />
		<property column="precio" name="precio" type="double" />		
		
		<many-to-one name="tipohabitacion" column="idTipoHabitacion" class="com.unla.datos.TipoHabitacion" unique="true"/>

	</class>
</hibernate-mapping>

